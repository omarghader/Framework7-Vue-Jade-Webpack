f7-login-screen#login-screen
  f7-view
    f7-page(login-screen='')
      f7-login-screen-title My App
      f7-list(form='')
        f7-list-item
          f7-label Username
          f7-input(type='text', autocomplete='off',
            @focus='onFocus', v-model!='login',
            :placeholder.once="$t('login.username.placeholder')")
        f7-list-item
          f7-label Password
          f7-input(type='password', autocomplete='off',
            @focus='onFocus', v-model!='login',
            :placeholder.once="$t('login.username.placeholder')")
      f7-list
        f7-list-button(login-screen-close='') Sign In
        f7-block-footer Click Sign In to close Login Screen
        .content-block: .list-block-label.color-red {{ message }}
        .content-block.color-gray {{ $t('login.description') }}
        .content-block
          .row
            .col-50: a(class=style.cancel, v-link="{name: 'index'}")
              | {{ $t('login.btn.cancel') }}
            .col-50: button(class=style.login, type='submit')
              | {{ $t('login.btn.login') }}
